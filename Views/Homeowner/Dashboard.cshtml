        <div class="projects-grid">
            <!-- Project Card 4 -->
            <div class="project-card">
                <img src="~/images/rental4.png" alt="Project" class="project-image">
                <span class="project-badge">NEW</span>
                <div class="project-content">
                    <h3>What is HomeSphere?</h3>
                    <a href="#" class="project-cta">Learn more</a>
                </div>
            </div>
            
            <!-- Project Card 5 -->
            <div class="project-card">
                <img src="~/images/rental1.png" alt="Project" class="project-image">
                <span class="project-badge">NEW</span>
                <div class="project-content">
                    <h3>What is PhotoRealism?</h3>
                    <a href="#" class="project-cta">Learn more</a>
                </div>
            </div>
            
            <!-- Project Card 6 -->
            <div class="project-card">
                <img src="~/images/rental2.png" alt="Project" class="project-image">
                <span class="project-badge">NEW</span>
                <div class="project-content">
                    <h3>What is TrustBuilders?</h3>
                    <a href="#" class="project-cta">Learn more</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Newsletter Section -->
<section class="newsletter-section">
    <div class="newsletter-container">
        <div class="newsletter-content">
            <h3>Straight from our desk, to your inbox.</h3>
            <p>Subscribe to our newsletter to get the latest updates and offers.</p>
        </div>
        <div class="newsletter-form">
            <input type="text" placeholder="Your Name">
            <input type="email" placeholder="Your Email">
            <button type="submit">Subscribe</button>
        </div>
    </div>
</section>


<script>
    document.addEventListener('DOMContentLoaded', function() {
        var swiper = new Swiper('.facilitiesSwiper', {
            slidesPerView: 1,
            spaceBetween: 20,
            autoplay: {
                delay: 3000,
                disableOnInteraction: false,
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            breakpoints: {
                640: {
                    slidesPerView: 2,
                },
                1024: {
                    slidesPerView: 3,
                },
            }
        });
    });
</script>