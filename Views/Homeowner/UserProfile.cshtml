@page
@model HomeOwner.Models.User
@{
    Layout = "~/Views/Shared/Dashboard_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/userprofile.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="user-profile-container">
    <div class="profile-header">
        <div class="cover-photo">
            <img src="~/images/frontview.jpg" alt="Cover Photo">
            <div class="profile-actions">
                <button class="btn-edit-cover"><i class="fas fa-camera"></i> Change Cover</button>
            </div>
        </div>
        <div class="profile-info">
            <div class="avatar-container">
                <img src="~/images/user-default-picture.jpg" alt="Profile Picture" class="profile-avatar" id="profileAvatar">
                <button class="btn-edit-avatar"><i class="fas fa-camera"></i></button>
                <input type="file" id="avatarUpload" accept="image/*" style="display: none;">
            </div>
            <div class="profile-details">
                <h1>@ViewBag.fullname</h1>
                <p class="profile-title">Homeowner</p>
                <div class="profile-stats">
                    <div class="stat-item">
                        <span class="stat-number">5</span>
                        <span class="stat-label">Properties</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">12</span>
                        <span class="stat-label">Bookings</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">3</span>
                        <span class="stat-label">Years</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="profile-content">
        <div class="profile-sidebar">
            <div class="sidebar-section about-section">
                <h3><i class="fas fa-user-circle"></i> About</h3>
                <div class="about-content">
                    <p><i class="fas fa-envelope"></i> @ViewBag.email</p>
                    <p><i class="fas fa-phone"></i> @ViewBag.contact</p>
                    <p><i class="fas fa-map-marker-alt"></i> @ViewBag.address</p>
                    <p><i class="fas fa-calendar-alt"></i> Joined June 2020</p>
                </div>
                <button class="btn-edit-profile"><i class="fas fa-pencil-alt"></i> Edit Profile</button>
            </div>

            <div class="sidebar-section verification-section">
                <h3><i class="fas fa-shield-alt"></i> Verification</h3>
                <div class="verification-item verified">
                    <i class="fas fa-check-circle"></i>
                    <span>Email Verified</span>
                </div>
                <div class="verification-item pending">
                    <i class="fas fa-hourglass-half"></i>
                    <span>Phone Verification Pending</span>
                </div>
                <div class="verification-item not-verified">
                    <i class="fas fa-times-circle"></i>
                    <span>ID Not Verified</span>
                </div>
            </div>
        </div>

    <div class="profile-main">
    <div class="profile-tabs">
        <button class="tab-btn active" data-tab="overview">Overview</button>
        <button class="tab-btn" data-tab="properties">Properties</button>
        <button class="tab-btn" data-tab="thumbnails">Thumbnails</button>
        <button class="tab-btn" data-tab="settings">Settings</button>
    </div>

    <div class="tab-content active" id="overview">
        <!-- Overview content remains the same -->
        <div class="card welcome-card">
            <div class="card-body">
                <h2>Welcome Back, @ViewBag.name</h2>
                <p>Here's what's happening with your properties today.</p>
                <div class="welcome-stats">
                    <div class="stat-card">
                        <i class="fas fa-home"></i>
                        <div>
                            <h3>5</h3>
                            <p>Properties</p>
                        </div>
                    </div>
                    <div class="stat-card">
                        <i class="fas fa-calendar-check"></i>
                        <div>
                            <h3>2</h3>
                            <p>Upcoming Bookings</p>
                        </div>
                    </div>
                    <div class="stat-card">
                        <i class="fas fa-bell"></i>
                        <div>
                            <h3>3</h3>
                            <p>Notifications</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card recent-activity">
            <div class="card-header">
                <h3>Recent Activity</h3>
            </div>
            <div class="card-body">
                <div class="activity-item">
                    <div class="activity-icon">
                        <i class="fas fa-calendar-plus"></i>
                    </div>
                    <div class="activity-content">
                        <p>Booked cleaning service for <strong>Luxury Villa</strong></p>
                        <small>Today, 10:30 AM</small>
                    </div>
                </div>
                <div class="activity-item">
                    <div class="activity-icon">
                        <i class="fas fa-home"></i>
                    </div>
                    <div class="activity-content">
                        <p>Added new property: <strong>Beach House</strong></p>
                        <small>Yesterday, 3:45 PM</small>
                    </div>
                </div>
                <div class="activity-item">
                    <div class="activity-icon">
                        <i class="fas fa-credit-card"></i>
                    </div>
                    <div class="activity-content">
                        <p>Payment received for <strong>Garden Maintenance</strong></p>
                        <small>May 15, 2023</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="tab-content" id="properties">
        <!-- Properties content remains the same -->
        <div class="card">
            <div class="card-header">
                <h3>Your Properties</h3>
                <button class="btn-add-property"><i class="fas fa-plus"></i> Add Property</button>
            </div>
            <div class="card-body">
                <div class="property-list">
                    <div class="property-card">
                        <div class="property-thumbnail">
                            <img src="~/images/frontview.jpg" alt="Luxury Villa">
                            <div class="thumbnail-actions">
                                <button class="btn-change-thumbnail" data-property="1"><i class="fas fa-camera"></i> Change</button>
                                <input type="file" class="thumbnail-upload" data-property="1" accept="image/*" style="display: none;">
                            </div>
                        </div>
                        <div class="property-info">
                            <h4>Luxury Villa</h4>
                            <p>Beverly Hills, CA</p>
                            <div class="property-stats">
                                <span><i class="fas fa-bed"></i> 5</span>
                                <span><i class="fas fa-bath"></i> 4</span>
                                <span><i class="fas fa-ruler-combined"></i> 4,200 sq.ft.</span>
                            </div>
                            <div class="property-actions">
                                <button class="btn-view"><i class="fas fa-eye"></i> View</button>
                                <button class="btn-edit"><i class="fas fa-pencil-alt"></i> Edit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="tab-content" id="thumbnails">
        <!-- New Thumbnails tab content -->
        <div class="card">
            <div class="card-header">
                <h3>Property Thumbnails</h3>
                <button class="btn-upload-thumbnails"><i class="fas fa-plus"></i> Upload Thumbnails</button>
                <input type="file" id="thumbnailUpload" accept="image/*" multiple style="display: none;">
            </div>
            <div class="card-body">
                <div class="thumbnail-gallery">
                    <div class="thumbnail-item">
                        <img src="~/images/frontview.jpg" alt="Front View">
                        <div class="thumbnail-actions">
                            <button class="btn-edit-thumbnail"><i class="fas fa-edit"></i></button>
                            <button class="btn-delete-thumbnail"><i class="fas fa-trash"></i></button>
                        </div>
                    </div>
                    <div class="thumbnail-item">
                        <img src="~/images/livingroom.jpg" alt="Living Room">
                        <div class="thumbnail-actions">
                            <button class="btn-edit-thumbnail"><i class="fas fa-edit"></i></button>
                            <button class="btn-delete-thumbnail"><i class="fas fa-trash"></i></button>
                        </div>
                    </div>
                    <div class="thumbnail-item">
                        <img src="~/images/kitchen.jpg" alt="Kitchen">
                        <div class="thumbnail-actions">
                            <button class="btn-edit-thumbnail"><i class="fas fa-edit"></i></button>
                            <button class="btn-delete-thumbnail"><i class="fas fa-trash"></i></button>
                        </div>
                    </div>
                    <div class="thumbnail-item">
                        <img src="~/images/backyard.jpg" alt="Backyard">
                        <div class="thumbnail-actions">
                            <button class="btn-edit-thumbnail"><i class="fas fa-edit"></i></button>
                            <button class="btn-delete-thumbnail"><i class="fas fa-trash"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="tab-content" id="settings">
        <!-- Settings content remains the same -->
        <div class="card">
            <div class="card-header">
                <h3>Account Settings</h3>
            </div>
            <div class="card-body">
                <form class="settings-form">
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" value="johnsmith" readonly>
                    </div>
                    <div class="form-group">
                        <label>Email Address</label>
                        <input type="email" value="john.smith@example.com">
                    </div>
                    <div class="form-group">
                        <label>Phone Number</label>
                        <input type="tel" value="+1 (555) 123-4567">
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input type="text" value="123 Main St, Beverly Hills, CA 90210">
                    </div>
                    <div class="form-group">
                        <label>Change Password</label>
                        <input type="password" placeholder="New Password">
                        <input type="password" placeholder="Confirm New Password">
                    </div>
                    <button type="submit" class="btn-save">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Profile Modal -->
<div class="modal" id="editProfileModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Edit Profile</h3>
                <button type="button" class="close-modal">&times;</button>
            </div>
            <div class="modal-body">
                        <form asp-action="UpdateProfile" asp-controller="Homeowner">
                            <input name="username" type="hidden" value=@ViewBag.username/>
                    <div class="form-row">
                        <div class="form-group">
                            <label>First Name</label>
                            <input name="firstname" type="text" value=@ViewBag.firstname>
                        </div>
                        <div class="form-group">
                            <label>Last Name</label>
                                    <input name="lastname" type="text" value=@ViewBag.lastname>
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label>Email</label>
                            <input name="email" type="email" value=@ViewBag.email>
                        </div>
                        <div class="form-group">
                            <label>Phone</label>
                                    <input name="contact_no" type="tel" value=@ViewBag.contact>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label>Address</label>
                                <textarea name="address" value=@ViewBag.address></textarea>
                    </div>
                            <div class="form-actions">
                                <button type="button" class="btn-cancel">Cancel</button>
                                <button type="submit" class="btn-save">Save Changes</button>
                            </div>
                    <div class="form-group">
                        <label>Profile Picture</label>
                        <div class="avatar-upload">
                            <img src="~/images/user-default-picture.jpg" alt="Current Profile" id="modalAvatarPreview">
                            <button type="button" class="btn-upload-avatar">Choose Image</button>
                            <input type="file" id="modalAvatarUpload" accept="image/*" style="display: none;">
                        </div>
                    </div>
                    
                  
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Change Cover Photo Modal -->
<div class="modal" id="changeCoverModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Change Cover Photo</h3>
                <button type="button" class="close-modal-2">&times;</button>
            </div>
            <div class="modal-body">
                <div class="cover-preview">
                    <img src="~/images/frontview.jpg" alt="Current Cover" id="coverPreview">
                </div>
                <div class="cover-options">
                    <button type="button" class="btn-upload-cover">Upload New Photo</button>
                    <input type="file" id="coverUpload" accept="image/*" style="display: none;">
                    <div class="cover-suggestions">
                        <h4>Suggested Covers</h4>
                        <div class="suggestion-grid">
                            <div class="suggestion-item" data-image="frontview.jpg">
                                <img src="~/images/frontview.jpg" alt="Front View">
                            </div>
                            <div class="suggestion-item" data-image="livingroom.jpg">
                                <img src="~/images/livingroom.jpg" alt="Living Room">
                            </div>
                            <div class="suggestion-item" data-image="kitchen.jpg">
                                <img src="~/images/kitchen.jpg" alt="Kitchen">
                            </div>
                            <div class="suggestion-item" data-image="backyard.jpg">
                                <img src="~/images/backyard.jpg" alt="Backyard">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <button type="button" class="btn-cancel">Cancel</button>
                    <button type="button" class="btn-save">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Thumbnail Modal -->
<div class="modal" id="editThumbnailModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Edit Thumbnail</h3>
                <button type="button" class="close-modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="thumbnail-preview-container">
                    <img id="thumbnailPreview" src="" alt="Preview" class="thumbnail-preview">
                </div>
                <div class="form-group">
                    <label>Replace Image</label>
                    <button type="button" class="btn-replace-thumbnail">Choose New Image</button>
                    <input type="file" id="replaceThumbnail" accept="image/*" style="display: none;">
                </div>
                <div class="form-group">
                    <label>Image Description</label>
                    <input type="text" id="thumbnailDescription" placeholder="Enter image description">
                </div>
                <div class="form-actions">
                    <button type="button" class="btn-cancel">Cancel</button>
                    <button type="button" class="btn-save">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/js/userprofile.js" asp-append-version="true"></script>