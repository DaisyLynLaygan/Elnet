<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HomeSphere Staff Portal</title>
    <link rel="stylesheet" href="~/css/staff/staff.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <!-- Top Navigation Bar -->
    <nav class="navbar">
        <a href="/" class="logo">
            <img src="/images/logo.png" alt="Company Logo">
            <span>HomeSphere</span>
        </a>

        <ul class="nav-menu">
            <li class="nav-item @(ViewBag.ActiveMenu == "" ? "active" : "")">
                <a asp-controller="Staff" asp-action="StaffDashboard" class="nav-link">
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item @(ViewBag.ActiveMenu == "Feedback" ? "active" : "")">
                <a asp-controller="Staff" asp-action="StaffServices" class="nav-link">
                    <span>Staff Services</span>
                </a>
            </li>
            <li class="nav-item @(ViewBag.ActiveMenu == "Community" ? "active" : "")">
                <a asp-controller="Staff" asp-action="StaffCommunity" class="nav-link">
                    <span>Community</span>
                </a>
            </li>
            <li class="nav-item @(ViewBag.ActiveMenu == "Events" ? "active" : "")">
                <a asp-controller="Staff" asp-action="StaffEvents" class="nav-link">
                    <span>Events</span>
                </a>
            </li>
        </ul>

        <div class="user-hamburger-container">
            <div class="user-profile">
                <img src="~/images/user-default-picture.jpg" alt="User profile" />
                <span class="user-name">Kimperor</span>
                <div class="profile-dropdown">
                    <a href="/Account/Settings" class="dropdown-link">
                        <i class="fas fa-cog"></i>
                        <span>Settings</span>
                    </a>
                    <form asp-controller="Home" asp-action="LogOut" method="post" class="dropdown-link">
                        <i class="fas fa-sign-out-alt"></i>
                        <button type="submit" class="dropdown-link" style=" all: unset; cursor: pointer; color: inherit; text-decoration: none;">Log Out</button>
                    </form>
                </div>
            </div>
            <button class="hamburger">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="staff-main">
        <div class="staff-content">
            @RenderBody()
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/staff/staff.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>