                                    icon: 'error'
                                });
                            });
                    }
                });
            }
        });
        
        // API call to update service request status and send notification
        async function updateServiceRequestStatus(requestId, staffNotes, notificationMessage) {
            console.log("Updating service request status for ID:", requestId);
            console.log("Staff notes:", staffNotes);
            console.log("Notification message:", notificationMessage);
            
            try {
                const requestBody = {
                    requestId: requestId,
                    status: 'In Progress',
                    staffNotes: staffNotes,
                    notificationMessage: notificationMessage
                };
                
                console.log("Request body:", requestBody);
                
                const response = await fetch('/Staff/UpdateServiceRequestStatus', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(requestBody)
                });
                
                const responseData = await response.json();
                console.log("Server response:", responseData);
                
                return responseData;
            } catch (error) {
                console.error('Error updating service request:', error);
                Swal.fire({
                    title: 'Error',
                    text: 'Failed to update the service request. Please try again.',
                    icon: 'error'
                });
                return { success: false, message: error.message };
            }
        }
