@model HomeOwner.Models.User

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/Register_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/register.css" />

<div class="register-wrapper">
    <div class="container">
        @ViewBag.message
        <div class="row justify-content-center align-items-center min-vh-100 py-4">
            <div class="col-md-10 col-lg-8 col-xl-6">
                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="logo-container">
                        <div class="logo">
                            <img src="~/images/logo.png" alt="Company Logo">
                        </div>
                    </div>
                    <div class="card-header text-white text-center position-relative">
                        <h2 class="my-4 mt-5 text-center">Create Your Account</h2>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="Create" asp-controller="Home">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input asp-for="username" class="form-control" id="username" placeholder="Username" />
                                        <label asp-for="username">Username</label>
                                        <span asp-validation-for="username" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input type="password" asp-for="user_password" class="form-control" id="password" placeholder="Password" />
                                        <label asp-for="user_password">Password</label>
                                        <span asp-validation-for="user_password" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="firstname" class="form-control" id="firstname" placeholder="First Name" />
                                <label asp-for="firstname">First Name</label>
                                <span asp-validation-for="firstname" class="text-danger small"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="lastname" class="form-control" id="lastname" placeholder="Last Name" />
                                <label asp-for="lastname">Last Name</label>
                                <span asp-validation-for="lastname" class="text-danger small"></span>
                            </div>

                           

                            <div class="form-floating mb-3">
                                <input asp-for="email" class="form-control" id="email" placeholder="Email Address" />
                                <label asp-for="email">Email Address</label>
                                <span asp-validation-for="email" class="text-danger small"></span>
                            </div>
                            
                            <div class="form-floating mb-3">
                                <input asp-for="address" class="form-control" id="address" placeholder="Address" />
                                <label asp-for="address">Address</label>
                                <span asp-validation-for="address" class="text-danger small"></span>
                            </div>
                            
                            <div class="form-floating mb-4">
                                <input asp-for="contact_no" class="form-control" id="contact" placeholder="Contact Number" />
                                <label asp-for="contact_no">Contact Number</label>
                                <span asp-validation-for="contact_no" class="text-danger small"></span>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-user-plus me-2"></i> Create Account
                                </button>
                            </div>
                            
                            <div class="text-center mt-4">
                                <p class="sign-in-text">Already have an account? <a href="/Home/Login" class="text-accent">Sign in</a></p>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small">
                            <i class="fas fa-shield-alt me-1"></i> Your information is secure with us
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hidden input for success message -->
<input type="hidden" id="registrationSuccess" value="@TempData["RegistrationSuccess"]" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <!-- FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    
    <script>
        // Show custom alert if registration is successful
        document.addEventListener('DOMContentLoaded', function () {
            const registrationSuccess = document.getElementById('registrationSuccess').value;
            if (registrationSuccess) {
                alert(registrationSuccess); // Custom alert
                window.location.href = '/Home/Login'; // Redirect to login page
            }
        });
    </script>
}